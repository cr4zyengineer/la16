/*
 * little data section that contains information
 */
section .data
    msg db "\nHello World!\n\n\0"

/*
 * start symbol of the kernel
 *
 * sets up everything and switches after setup to userspace
 *
 */
_start:
    mov r0, _inthandler         ; Inthandler setup
    intset 0x80, r0
    mov r0, 0b0                 ; Mapping to MPP
    bl _map_page_as_rx          ; Mapping page 0x0 to 0x0 as rx
    inc r0
    bl _map_page_as_rx          ; Mapping page 0x1 to 0x1 as rx
    inc r0
    bl _map_page_as_rx          ; Mapping page 0x2 to 0x2 as rx
    mov r0, 0x100               ; Mapping page 0x50 to page 0x100 to fix stack for the user
    mov r1, 0x50
    mpagemap r0, r1
    mpageprot r1, 0b00000011    ; Marking stack page(0x100) as rw^
    mov sp, 0xFFFE              ; Setting up stack pointer
    mov el, 0b0                 ; Switch to userspace
    bl _userspace_entry
    hlt

/*
 * page helpers
 */
_map_page_as_rx:
    mpageprot r0, 0b00000101
    mpagemap r0,  r0
    ret

/*
 * Interruption handler
 *
 * handles interruptions by the userspace program
 *
 */
_inthandler:
    cmp r0, 0b00
    je .out
    cmp r0, 0b01
    je .in
    cmp r0, 0b10
    je .mmap
    jmp .end

    ; syscall that prints out one character to console
.out:
    and r1, 0x00FF
    out 0x00, r1
    jmp .end

    ; syscall that returns a character from console
.in:
    in rr, 0x00
    jmp .end

    ; syscall that allocates a page and maps it into userspace virtual map
.mmap:
    mov rr, 0xFFFF      ; aka MAP_FAILED... we need constants i swear

.end:
    intret