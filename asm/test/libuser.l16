_puts:
    movz r1, r0         ; moving r0 into r1 and zeoring r0
.loop:
    mld r0, r1          ; loading memory from address in r1 into r0
    and r0, 0xFF        ; mask r0 with a byte
    bl _putc            ; branch link to putc
    inc r1              ; increment r1
    cmp r0, '\0'        ; comparing r0 with a null terminator
    jne .loop           ; jumping back to .loop
    ret

/*
 * putc is used to print single characters to the console
 */
_putc:
    movz r1, r0         ; moving r0 into r1 and zeroring r0
    int 0x80            ; interrupt 0x80
    ret

/*
 * printing unsigned 16bit numbers
 */
_putnum:
    cpy r2, r0          ; r2 = number
    cpy r3, 0b0         ; r3 = digit count
.loop:
    cpy r0, r2
    cpy r1, 10
    div r0, r1          ; r0 = quotient
    cpy r4, r0          ; SAVE quotient in r4
    mul r0, r1          ; r0 = quotient * 10
    sub r2, r0          ; r2 = digit (number % 10)
    add r2, '0'         ; convert to ASCII
    push r2             ; save digit
    inc r3              ; count++
    cpy r2, r4          ; r2 = quotient for next iteration
    cmp r2, 0b0
    jne .loop
.print:
    cmp r3, 0b0
    je .end
    pop r0
    bl _putc
    dec r3
    jmp .print
.end:
    ret

/*
 * getc is used to get single characters from the console
 */
_getc:
    cpy r0, 0b01
    int 0x80
    ret