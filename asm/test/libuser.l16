;
; puts is used to print entire strings to console
;
; r0 = address
;
_puts:
    mov r1, r0
    mov r0, 0b0
.loop:
    mldb r0, r1
    bl _putc
    inc r1
    cmp r0, '\0'
    jne .loop
.end:
    ret

;
; putc is used to print single characters to the console
;
_putc:
    mov r1, r0
    mov r0, 0b00
    int 0x80
    ret

;
; getc is used to get single characters from the console
;
_getc:
    mov r0, 0b01
    int 0x80
    ret