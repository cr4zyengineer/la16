/*
 * little data section that contains information
 */
section .data
    kernel_hello db "[*] hello from kernel\n\0"
    kernel_mapped db "[*] mapped pages for user and kernel\n\0"
    kernel_user_entry db "[*] jumping into userspace entry\n\0"

/*
 * start symbol of the kernel
 *
 * sets up everything and switches after setup to userspace
 *
 */
_start:
    call _int_init
    call _puts, kernel_hello
    call _pmm_init

    ; Setting up r0 for rx map loop
    mov r0, 0x00
.rx_map_loop:
    call _map_page_with_prot, r0, r0, 0b1011        ; Memory mapping setup FIXME: r0 overrides custom set r1
    cmp r0, 10
    inc r0
    jne .rx_map_loop

    ; Doing the rest of this bs
    call _map_page_with_prot, 0x50, 0x100, 0b0111
    mov sp, 0xFFFE                                   ; Setting up stack pointer
    mov el, 0b0                                      ; Switch to userspace

    call _puts, kernel_mapped
    call _puts, kernel_user_entry
    bl _userspace_entry                              ; Jumping to userspace entry

.halt:
    hlt                                              ; Bye bye

/*
 * page mapping helper
 *
 * r0 = physical page
 * r1 = virtual page
 * r2 = protection flags
 */
_map_page_with_prot:
    vpset r1, r0
    vpflgset r1, r2
    ret