section .data
    loop_int_msg_start db "[userspace] integer loop started\0"
    loop_int_msg_end db "\n[userspace] integer loop ended\n\0"

/*
 * userspace entry
 */
_userspace_entry:
    ; printing hello world
    call _puts, msg

    ; integer loop repeats till reaching maximum
    call _puts, loop_int_msg_start
    mov r0, 0
.loop_int:
    mov r1, 0
    call _putc, '\n'
.loop_int_inner:
    bl _putnum
    call _putc, '\t'
    inc r0, r1
    cmp r1, 8
    je .loop_int
    cmp r0, 0xFF
    jlt .loop_int_inner
    call _puts, loop_int_msg_end

.loop:
    call _getc
    call _putc, rr
    jmp .loop