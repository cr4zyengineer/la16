section .data
    user_hello db "hello from userspace\0"
    user_shell db "starting test shell\0"
    user_prompt db "# \0"
    user_delete db "\b \b\0"
    user_exit db "exit\0"
    user_unrecognized_command db "unrecognized command: \0"

/* prints list of integers from r0 to r1 */
_put_integer_list:
    mov r2, r1
    mov r1, 0
    jmp .loop_int_inner
.loop_int:
    mov r1, 0
    call _putc, '\n'
.loop_int_inner:
    call _putbase, r0, 16
    call _putc, '\t'
    inc r0, r1
    cmp r1, 20
    je .loop_int
    cmp r0, r2
    jle .loop_int_inner
    call _putc, '\n'
    ret

/* unfinished test shell */
_userspace_test_shell:
    sub sp, 200                             ; allocating 200 bytes of stack memory
    mov r0, sp                              ; moving stack pointer into register 0
    inc r0, r0                              ; incrementing register 0 as the buffer pointer twice to not interfear with the stack
.prompt:
    call _puts, user_prompt                 ; printing shell prompt
    call _readline, r0                      ; getting readline
    cmp rr, 0                               ; checking buffer length
    je .prompt                              ; jumping if buffer length is 0
    call _strcmp, r0, user_exit             ; comparing both strings
    cmp rr, 0                               ; comparing return register with 0
    je .end                                 ; if equal we go to .end
    call _puts, user_unrecognized_command   ; i dont recognize this one huh
    call _puts, r0                          ; printing string
    call _putc, '\n'                        ; printing character
    jmp .prompt                             ; going back to prompt
.end:
    ret                                     ; return automatically restores back old stack pointer

/* entry of userspace*/
_userspace_entry:
    call _log, user_hello
    call _put_integer_list, 0x00, 0xFF
    call _log, user_shell
    call _userspace_test_shell
    ret