section .data
    user_hello db "[userspace] hello from userspace\n\0"
    user_shell db "[userspace] starting test shell\n\0"
    user_prompt db "# \0"

/* prints list of integers from r0 to r1 */
_put_integer_list:
    mov r2, r1
.loop_int:
    mov r1, 0
    cmp r0, 0
    je .loop_int_inner
    call _putc, '\n'
.loop_int_inner:
    bl _putnum
    call _putc, '\t'
    inc r0, r1
    cmp r1, 8
    je .loop_int
    cmp r0, r2
    jlt .loop_int_inner
    call _putc, '\n'
    ret

/* unfinished test shell */
_readline:
.loop:
    call _getc                  ; getting user input
    cmp rr, '\n'                ; checking if user returned
    call _putc, rr              ; echoing user input back out
    je .end                     ; exiting loop if returned
    stb r0, rr                  ; storing rr into r0 as the address
    inc r0                      ; incrementing r0 as the address
    jmp .loop                   ; reentering input loop
.end:
    stb r0, '\0'                ; null terminating string buffer
    ret

_userspace_test_shell:
    sub sp, 200                 ; allocating 200 bytes of stack memory
    mov r0, sp                  ; moving stack pointer into register 0
    inc r0, r0                  ; incrementing register 0 as the buffer pointer twice to not interfear with the stack
.prompt:
    call _puts, user_prompt     ; printing shell prompt
    call _readline, r0
    call _puts, r0
    call _putc, '\n'
    jmp .prompt
.end:
    ret                         ; return automatically restores back old stack pointer

/* entry of userspace*/
_userspace_entry:
    call _puts, user_hello
    call _put_integer_list, 0, 0xFF
    call _puts, user_shell
    call _userspace_test_shell
    ret