section .data
    log_prefix_log db "[*] \0"
    log_prefix_err db "[!] \0"

_log_internal:
    swp r1, r0                          ; swapping r1 with r0, because r1 carries the prefix and comes first
    bl _puts
    mov r0, r1                          ; moving r1 back into r0, because r1 carries the user defined string buffer
    bl _puts
    mov r0, '\n'                        ; newline character on every log
    bl _putc
    ret

_log:
    mov r1, log_prefix_log              ; moving prefix into 1st register
    bl _log_internal
    ret

_log_err:
    mov r1, log_prefix_err              ; moving prefix into 1st register
    bl _log_internal
    ret