/*
 * little data section that contains information
 */
section .data
    msg db "\nHello World!\n\n\0"

/*
 * start symbol of the kernel
 *
 * sets up everything and switches after setup to userspace
 *
 */
_start:
    mov r0, _inthandler                             ; Interruption handler setup
    intset 0x80, r0

    ; as a security messure we unmap all
    mpageunmapall

    ; Setting up r0 for rx map loop
    mov r0, 0x00
.rx_map_loop:
    call _map_page_with_prot, r0, r0, 0b1011        ; Memory mapping setup FIXME: r0 overrides custom set r1
    inc r0
    cmp r0, 10
    jne .rx_map_loop

    ; Doing the rest of this bs
    call _map_page_with_prot, 0x50, 0x100, 0b0111
    mov sp, 0xFFFE                                   ; Setting up stack pointer
    mov el, 0b0                                      ; Switch to userspace
    bl _userspace_entry                              ; Jumping to userspace entry

.halt:
    hlt                                              ; Bye bye

/*
 * page mapping helper
 *
 * r0 = physical page
 * r1 = virtual page
 * r2 = protection flags
 */
_map_page_with_prot:
    mpagemap r1, r0
    mpageprot r1, r2
    ret

/*
 * Interruption handler
 *
 * handles interruptions by the userspace program
 *
 */
_inthandler:
    cmp r0, 0x3
    jgt .end                    ; default case
    mul r0, 4
    add pc, r0
    jmp .out
    jmp .in
    jmp .mmap
.out:                           ; syscall that prints out one character to console
    and r1, 0x00FF
    out 0x00, r1
    jmp .end
.in:                            ; syscall that returns a character from console
    in rr, 0x00
    jmp .end
.mmap:                          ; syscall that allocates a page and maps it into userspace virtual map
    mov rr, 0xFFFF              ; aka MAP_FAILED... we need constants i swear
.end:
    intret